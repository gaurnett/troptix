{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
  },
  "stylelint.validate": ["css", "scss"], // only run on actual CSS files
  "stylelint.ignoreFiles": ["**/*.js", "**/*.ts", "**/*.tsx", "**/*.jsx"]
}
